{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "admin-panel/index.html",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "admin-panel"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/admin/(.*)", "destination": "/admin-panel/$1" },
    { "source": "/(.*)", "destination": "/client/build/$1" }
  ]
}
